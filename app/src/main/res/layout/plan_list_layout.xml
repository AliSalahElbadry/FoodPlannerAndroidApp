<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainLayoutPlanList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlansContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlanList" />

    <TextView
        android:id="@+id/textViewPlanList"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:elevation="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"


        android:text="@string/my_plans"
        android:textStyle="bold"
        android:textColor="@color/second_color"
        android:textSize="32sp"

        app:layout_constraintBottom_toBottomOf="@+id/imageButtonAddPlan"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButtonAddPlan"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_marginTop="32dp"
        android:background="@drawable/btn_add"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toEndOf="@+id/textViewPlanList"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_add_35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="11dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="387dp" />


</androidx.constraintlayout.widget.ConstraintLayout>