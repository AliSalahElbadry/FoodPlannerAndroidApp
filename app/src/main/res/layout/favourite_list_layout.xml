<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerViewRandumMeals"

        android:layout_width="383dp"
        android:layout_height="651dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlanList" />

    <TextView
        android:id="@+id/textViewPlanList"
        android:layout_width="171dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/search_view"
        android:elevation="12dp"
        android:text="@string/my_favourite"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgViewheartstatic"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/search_view"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPlanList"
        app:layout_constraintStart_toEndOf="@+id/textViewPlanList"
        app:layout_constraintTop_toTopOf="@+id/textViewPlanList"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/heartfill"
        tools:ignore="ImageContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>